# Example secrets file - DO NOT commit actual secrets
# Create actual secrets using: kubectl create secret generic swb-secrets --from-literal=...

apiVersion: v1
kind: Secret
metadata:
  name: swb-secrets
  namespace: smart-website-builder
type: Opaque
stringData:
  GEMINI_API_KEY: "your-gemini-api-key"
  VERCEL_API_TOKEN: "your-vercel-token"
  SECRET_KEY: "your-secret-key-min-32-chars"
  POSTGRES_USER: "postgres"
  POSTGRES_PASSWORD: "your-postgres-password"
  REDIS_PASSWORD: "your-redis-password"
  DATABASE_URL: "postgresql://postgres:password@postgres-service:5432/smart_website_builder"
  REDIS_URL: "redis://:password@redis-service:6379/0"
  CELERY_BROKER_URL: "redis://:password@redis-service:6379/1"
  CELERY_RESULT_BACKEND: "redis://:password@redis-service:6379/2"
