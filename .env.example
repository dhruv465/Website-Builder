# =============================================================================
# Smart Website Builder - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE_URL=ws://localhost:8000
VITE_API_URL=http://localhost:8000

# Gemini API Key (for direct client calls - will be deprecated when backend is fully integrated)
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# -----------------------------------------------------------------------------
# Backend API Configuration
# -----------------------------------------------------------------------------
GEMINI_API_KEY=your_gemini_api_key_here
VERCEL_API_TOKEN=your_vercel_token_here
SECRET_KEY=your_secret_key_here_min_32_chars

# Environment: development, staging, production
ENVIRONMENT=development
LOG_LEVEL=info

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:80,http://127.0.0.1:3000,http://127.0.0.1:5173

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=smart_website_builder
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Full database URL (auto-constructed in docker-compose)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/smart_website_builder

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Celery Configuration
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_ALWAYS_EAGER=False

# -----------------------------------------------------------------------------
# Docker Compose Port Mappings
# -----------------------------------------------------------------------------
FRONTEND_PORT=80
API_PORT=8000
FLOWER_PORT=5555

# -----------------------------------------------------------------------------
# Monitoring & Observability
# -----------------------------------------------------------------------------
# Flower (Celery monitoring)
FLOWER_USER=admin
FLOWER_PASSWORD=admin

# Prometheus (if enabled)
PROMETHEUS_PORT=9090

# Grafana (if enabled)
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# Production Deployment (Cloud Provider Specific)
# -----------------------------------------------------------------------------
# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_CLOUDFRONT_DISTRIBUTION_ID=

# GCP Configuration
GCP_PROJECT_ID=
GCP_REGION=us-central1
GCP_CREDENTIALS_PATH=

# Azure Configuration
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=
AZURE_LOCATION=eastus

# -----------------------------------------------------------------------------
# Security & Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_PROFILING=false
ENABLE_RATE_LIMITING=true
