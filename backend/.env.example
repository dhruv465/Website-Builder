# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
ENVIRONMENT=development

# Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/smart_website_builder
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Vercel Deployment
VERCEL_API_TOKEN=your_vercel_token_here

# Security
SECRET_KEY=your_secret_key_here_change_in_production_min_32_chars
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1
RATE_LIMIT_PER_MINUTE=100
MAX_REQUEST_SIZE_MB=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Session Management
SESSION_TTL_HOURS=24
SESSION_CLEANUP_DAYS=90

# Agent Configuration
MAX_RETRIES=3
AGENT_TIMEOUT_SECONDS=300
LLM_TEMPERATURE=0.2

# Quality Thresholds
MIN_SEO_SCORE=70
MIN_ACCESSIBILITY_SCORE=80
MIN_PERFORMANCE_SCORE=75
MAX_IMPROVEMENT_CYCLES=2
